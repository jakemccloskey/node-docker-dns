{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "env": {
        "node": true,
        "es6": true
    },
    "rules": {
        "no-debugger": 2,
        "no-var": 2,
        "object-shorthand": 2,
        "no-class-assign": 2,
        "constructor-super": 2,
        "arrow-spacing": 2,
        "generator-star-spacing": [2, "after"],
        "no-dupe-class-members": 2,
        "no-const-assign": 2,
        "no-confusing-arrow": 2,
        "no-new-symbol": 2,
        "no-this-before-super": 2,
        "prefer-rest-params": 2,
        "prefer-reflect": 2,
        "prefer-spread": 2,
        "no-undef": 2,
        "no-undef-init": 2,
        "no-unused-vars": 2,
        "no-use-before-define": 2,
        "no-shadow-restricted-names": 2,
        "no-label-var": 2,
        "no-delete-var": 2,
        "valid-typeof": 2,
        "valid-jsdoc": 2,
        "use-isnan": 2,
        "no-unreachable": 2,
        "consistent-return": 2,
        "curly": 2,
        "default-case": 2,
        "eqeqeq": 2,
        "no-caller": 2,
        "no-eval": 2,
        "no-void": 2,
        "no-with": 2,
        "no-sequences": 2
    }
}
